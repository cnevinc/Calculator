<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".MainActivity">

    <TextView
            android:text="0"
            android:gravity="center"
            android:textSize="34sp"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:id="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" tools:text="0"/>

    <Button
            android:text="AC"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textSize="34sp"
            android:id="@+id/bt_ac" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintEnd_toStartOf="@+id/bt_sign_flip"
            app:layout_constraintBottom_toTopOf="@+id/bt_7"/>

    <Button android:textSize="34sp"
            android:text="+/-"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/bt_sign_flip"

            app:layout_constraintStart_toEndOf="@+id/bt_ac" app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintEnd_toStartOf="@+id/bt_mod"
            app:layout_constraintBottom_toTopOf="@+id/bt_8"/>

    <Button android:textSize="34sp"
            android:text="%"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/bt_mod"
            app:layout_constraintStart_toEndOf="@+id/bt_sign_flip" app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintEnd_toStartOf="@+id/bt_div"
            app:layout_constraintBottom_toTopOf="@+id/bt_9"/>

    <Button android:textSize="34sp"
            android:text="/"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/bt_div"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintStart_toEndOf="@+id/bt_mod" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/bt_mul"/>

    <Button android:textSize="34sp"
            android:text="7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/bt_7" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bt_ac"
            app:layout_constraintEnd_toStartOf="@+id/bt_8"
            app:layout_constraintBottom_toTopOf="@+id/bt_4"/>

    <Button android:textSize="34sp"
            android:text="8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/bt_8"
            app:layout_constraintStart_toEndOf="@+id/bt_7"
            app:layout_constraintTop_toBottomOf="@+id/bt_sign_flip" app:layout_constraintEnd_toStartOf="@+id/bt_9"
            app:layout_constraintBottom_toTopOf="@+id/bt_5"/>

    <Button android:textSize="34sp"
            android:text="9"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/bt_9"
            app:layout_constraintStart_toEndOf="@+id/bt_8"
            app:layout_constraintTop_toBottomOf="@+id/bt_mod" app:layout_constraintEnd_toStartOf="@+id/bt_mul"
            app:layout_constraintBottom_toTopOf="@+id/bt_6"/>
    <Button android:textSize="34sp"
            android:text="*"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/bt_mul"
            app:layout_constraintStart_toEndOf="@+id/bt_9"
            app:layout_constraintTop_toBottomOf="@+id/bt_div"
            app:layout_constraintBottom_toTopOf="@+id/bt_minus" app:layout_constraintEnd_toEndOf="parent"
    />
    <Button android:textSize="34sp"
            android:text="4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/bt_4" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/bt_1"
            app:layout_constraintEnd_toStartOf="@+id/bt_5"
            app:layout_constraintTop_toBottomOf="@+id/bt_7"/>

    <Button android:textSize="34sp"
            android:text="5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/bt_5"
            app:layout_constraintStart_toEndOf="@+id/bt_7"
            app:layout_constraintBottom_toTopOf="@+id/bt_1" app:layout_constraintEnd_toStartOf="@+id/bt_6"
            app:layout_constraintTop_toBottomOf="@+id/bt_8"/>

    <Button android:textSize="34sp"
            android:text="6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/bt_6"
            app:layout_constraintStart_toEndOf="@+id/bt_8"
            app:layout_constraintTop_toBottomOf="@+id/bt_9" app:layout_constraintEnd_toStartOf="@+id/bt_mul"
            app:layout_constraintBottom_toTopOf="@+id/bt_3"/>

    <Button android:textSize="34sp"
            android:text="-"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/bt_minus"
            app:layout_constraintStart_toEndOf="@+id/bt_6"
            app:layout_constraintTop_toBottomOf="@+id/bt_mul" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/bt_plus"/>

    <Button android:textSize="34sp"
            android:text="1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/bt_1" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bt_4"
            app:layout_constraintEnd_toStartOf="@+id/bt_2"
            app:layout_constraintBottom_toTopOf="@+id/bt_0"/>

    <Button android:textSize="34sp"
            android:text="3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/bt_3"
            app:layout_constraintStart_toEndOf="@+id/bt_5"
            app:layout_constraintTop_toBottomOf="@+id/bt_6"
            app:layout_constraintEnd_toStartOf="@+id/bt_plus" app:layout_constraintBottom_toTopOf="@+id/bt_dot"/>

    <Button android:textSize="34sp"
            android:text="+"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/bt_plus"
            app:layout_constraintTop_toBottomOf="@+id/bt_minus" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/bt_6"
            app:layout_constraintBottom_toTopOf="@+id/bt_eq"/>

    <Button android:textSize="34sp"
            android:text="2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/bt_2" app:layout_constraintStart_toEndOf="@+id/bt_1"
            app:layout_constraintTop_toBottomOf="@+id/bt_5"
            app:layout_constraintEnd_toStartOf="@+id/bt_3"
            app:layout_constraintBottom_toTopOf="@+id/bt_0"/>

    <Button android:textSize="34sp"
            android:text="0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/bt_0"
            app:layout_constraintTop_toBottomOf="@+id/bt_1" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/bt_dot" app:layout_constraintBottom_toBottomOf="parent"
    />
    <Button android:textSize="34sp"
            android:text="."
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/bt_dot"
            app:layout_constraintStart_toEndOf="@+id/bt_2" app:layout_constraintEnd_toStartOf="@+id/bt_eq"
            app:layout_constraintTop_toBottomOf="@+id/bt_3" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="8dp"/>

    <Button android:textSize="34sp"
            android:text="="
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/bt_eq"
            app:layout_constraintTop_toBottomOf="@+id/bt_plus" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="@+id/bt_plus"
            android:layout_marginStart="8dp"/>

</android.support.constraint.ConstraintLayout>