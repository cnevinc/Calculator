<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".MainActivity">


    <Button
            android:text="7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_7" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintEnd_toStartOf="@+id/bt_8"
            app:layout_constraintBottom_toTopOf="@+id/bt_4"/>
    <Button
            android:text="8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_8"
            app:layout_constraintStart_toEndOf="@+id/bt_7" app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintEnd_toStartOf="@+id/bt_9"
            app:layout_constraintBottom_toTopOf="@+id/bt_5"/>
    <TextView
            android:text="0"
            android:gravity="center"
            android:textSize="30sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" tools:text="0"/>
    <Button
            android:text="9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_9"
            app:layout_constraintStart_toEndOf="@+id/bt_8" app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintEnd_toStartOf="@+id/bt_c"
            app:layout_constraintBottom_toTopOf="@+id/bt_6"/>
    <Button
            android:text="C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_c"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintStart_toEndOf="@+id/bt_9" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/bt_plus"/>
    <Button
            android:text="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_4" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bt_7"
            app:layout_constraintEnd_toStartOf="@+id/bt_5"
            app:layout_constraintBottom_toTopOf="@+id/bt_1"/>
    <Button
            android:text="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_5"
            app:layout_constraintStart_toEndOf="@+id/bt_4"
            app:layout_constraintTop_toBottomOf="@+id/bt_8" app:layout_constraintEnd_toStartOf="@+id/bt_6"
            app:layout_constraintBottom_toTopOf="@+id/bt_2"/>
    <Button
            android:text="6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_6"
            app:layout_constraintStart_toEndOf="@+id/bt_5"
            app:layout_constraintTop_toBottomOf="@+id/bt_9" app:layout_constraintEnd_toStartOf="@+id/bt_plus"
            app:layout_constraintBottom_toTopOf="@+id/bt_3"/>
    <Button
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_plus"
            app:layout_constraintStart_toEndOf="@+id/bt_6"
            app:layout_constraintTop_toBottomOf="@+id/bt_c"
            app:layout_constraintBottom_toTopOf="@+id/bt_minus" app:layout_constraintEnd_toEndOf="parent"
    />
    <Button
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_1" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/bt_0"
            app:layout_constraintEnd_toStartOf="@+id/bt_2"
            app:layout_constraintTop_toBottomOf="@+id/bt_4"/>
    <Button
            android:text="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_2"
            app:layout_constraintStart_toEndOf="@+id/bt_4"
            app:layout_constraintBottom_toTopOf="@+id/bt_0" app:layout_constraintEnd_toStartOf="@+id/bt_3"
            app:layout_constraintTop_toBottomOf="@+id/bt_5"/>
    <Button
            android:text="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_3"
            app:layout_constraintStart_toEndOf="@+id/bt_5"
            app:layout_constraintTop_toBottomOf="@+id/bt_6" app:layout_constraintEnd_toStartOf="@+id/bt_plus"
            app:layout_constraintBottom_toTopOf="@+id/bt_dot"/>
    <Button
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_minus"
            app:layout_constraintStart_toEndOf="@+id/bt_3"
            app:layout_constraintTop_toBottomOf="@+id/bt_plus" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/bt_eval"/>
    <Button
            android:text="0"
            android:layout_width="182dp"
            android:layout_height="52dp"
            android:id="@+id/bt_0" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bt_1"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_dot"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/bt_2"
            app:layout_constraintTop_toBottomOf="@+id/bt_3"
            app:layout_constraintEnd_toStartOf="@+id/bt_eval" android:layout_marginEnd="8dp"/>
    <Button
            android:text="="
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:id="@+id/bt_eval"
            app:layout_constraintTop_toBottomOf="@+id/bt_minus" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/bt_3"
            app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>